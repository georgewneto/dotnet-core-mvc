<Window x:Class="Projeto.WPF.EstadosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto.WPF"
        mc:Ignorable="d"
        Title="Gerenciar Estados" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <Border Grid.Row="0" Background="#2E86AB" Padding="15">
            <TextBlock Text="Gerenciar Estados" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center" />
        </Border>
        
        <!-- Área Principal -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            
            <!-- Lista de Estados -->
            <GroupBox Grid.Column="0" Header="Lista de Estados" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Barra de Busca -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <TextBox Name="txtBusca" Width="200" TextChanged="TxtBusca_TextChanged" />
                        <Button Content="Limpar" Margin="5,0,0,0" Click="BtnLimparBusca_Click" />
                    </StackPanel>
                    
                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" Name="dgEstados" 
                             AutoGenerateColumns="False" 
                             CanUserAddRows="False"
                             SelectionMode="Single"
                             SelectionChanged="DgEstados_SelectionChanged"
                             Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                            <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*" />
                            <DataGridTextColumn Header="UF" Binding="{Binding UF}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
            
            <!-- Separador -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
            
            <!-- Formulário -->
            <GroupBox Grid.Column="2" Header="Dados do Estado" Margin="10,0,0,0">
                <StackPanel Margin="10">
                    <!-- ID (somente leitura) -->
                    <TextBlock Text="ID:" Margin="0,0,0,5" />
                    <TextBox Name="txtId" IsReadOnly="True" Background="#F0F0F0" Margin="0,0,0,10" />
                    
                    <!-- Nome -->
                    <TextBlock Text="Nome:" Margin="0,0,0,5" />
                    <TextBox Name="txtNome" MaxLength="50" Margin="0,0,0,10" />
                    
                    <!-- UF -->
                    <TextBlock Text="UF:" Margin="0,0,0,5" />
                    <TextBox Name="txtUF" MaxLength="2" CharacterCasing="Upper" Margin="0,0,0,20" />
                    
                    <!-- Botões -->
                    <Button Name="btnNovo" Content="Novo" Click="BtnNovo_Click" Margin="0,0,0,5" />
                    <Button Name="btnSalvar" Content="Salvar" Click="BtnSalvar_Click" Margin="0,0,0,5" />
                    <Button Name="btnEditar" Content="Editar" Click="BtnEditar_Click" Margin="0,0,0,5" />
                    <Button Name="btnExcluir" Content="Excluir" Click="BtnExcluir_Click" Margin="0,0,0,5" />
                    <Button Name="btnCancelar" Content="Cancelar" Click="BtnCancelar_Click" Margin="0,0,0,5" />
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Rodapé -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="lblStatus" Text="Pronto" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>