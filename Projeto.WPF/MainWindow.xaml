<Window x:Class="Projeto.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto.WPF"
        mc:Ignorable="d"
        Title="Sistema de Cadastro - Estados e Cidades" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Cadastros">
                <MenuItem Header="Estados" Click="MenuItem_Estados_Click" />
                <MenuItem Header="Cidades" Click="MenuItem_Cidades_Click" />
                <Separator />
                <MenuItem Header="Sair" Click="MenuItem_Sair_Click" />
            </MenuItem>
        </Menu>
        
        <!-- Área Principal -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Conteúdo Principal -->
            <Border Grid.Row="0" Background="#F5F5F5" Padding="20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Sistema de Cadastro" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,30"
                              Foreground="#333" />
                    
                    <TextBlock Text="Estados e Cidades" 
                              FontSize="18" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,50"
                              Foreground="#666" />
                    
                    <!-- Botões de Acesso Rápido -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnEstados" 
                               Content="Gerenciar Estados" 
                               Width="200" 
                               Height="60" 
                               FontSize="16" 
                               Margin="10"
                               Click="BtnEstados_Click"
                               Style="{StaticResource {x:Type Button}}" />
                        
                        <Button Name="btnCidades" 
                               Content="Gerenciar Cidades" 
                               Width="200" 
                               Height="60" 
                               FontSize="16" 
                               Margin="10"
                               Click="BtnCidades_Click"
                               Style="{StaticResource {x:Type Button}}" />
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Status Bar -->
            <StatusBar Grid.Row="1">
                <StatusBarItem>
                    <TextBlock Text="Sistema de Cadastro - Versão 1.0" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </DockPanel>
</Window>
