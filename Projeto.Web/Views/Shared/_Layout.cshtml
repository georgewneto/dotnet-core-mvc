<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gerenciamento de Estados e Cidades</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <header class="bg-blue-600 shadow-md">
        <nav class="container mx-auto px-4 py-3 flex items-center justify-between">
            <a class="text-white text-xl font-bold" asp-area="" asp-controller="Home" asp-action="Index">Gerenciamento de Estados e Cidades</a>
            <div class="space-x-4">
                <a class="text-white hover:text-blue-200" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-white hover:text-blue-200" asp-area="" asp-controller="Estados" asp-action="Index">Estados</a>
                <a class="text-white hover:text-blue-200" asp-area="" asp-controller="Cidades" asp-action="Index">Cidades</a>
            </div>
        </nav>
    </header>

    <main class="container mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <footer class="bg-blue-600 text-white py-4 mt-8">
        <div class="container mx-auto px-4 text-center">
            &copy; @DateTime.Now.Year - Gerenciamento de Estados e Cidades
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
