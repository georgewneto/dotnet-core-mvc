<ui:FluentWindow x:Class="Projeto.WPF_UI.CidadesWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projeto.WPF_UI"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Gerenciar Cidades"
      WindowStartupLocation="CenterScreen">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="0" Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="340" />
      </Grid.ColumnDefinitions>

      <!-- Lista de Cidades + Filtros -->
      <ui:Card Grid.Column="0" Margin="0,0,10,0">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <ui:TextBox Name="txtBusca" PlaceholderText="Buscar por nome..." Width="220" TextChanged="TxtBusca_TextChanged" />
            <ComboBox Name="cbFiltroEstado" Width="180" Margin="8,0,0,0" SelectionChanged="CbFiltroEstado_SelectionChanged" DisplayMemberPath="Nome" />
            <ui:Button Content="Limpar" Margin="8,0,0,0" Click="BtnLimparBusca_Click" Appearance="Secondary" />
          </StackPanel>

          <DataGrid Grid.Row="1" Name="dgCidades"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                SelectionMode="Single"
                SelectionChanged="DgCidades_SelectionChanged"
                Margin="5">
            <DataGrid.Columns>
              <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
              <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*" />
              <DataGridTextColumn Header="Estado" Binding="{Binding Estado.Nome}" Width="160" />
              <DataGridTextColumn Header="UF" Binding="{Binding Estado.UF}" Width="60" />
            </DataGrid.Columns>
          </DataGrid>
        </Grid>
      </ui:Card>

      <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

      <!-- FormulÃ¡rio -->
      <ui:Card Grid.Column="2" Margin="10,0,0,0">
        <StackPanel Margin="10">
          <TextBlock Text="ID:" Margin="0,0,0,5" />
          <ui:TextBox Name="txtId" IsReadOnly="True" Margin="0,0,0,10" />

          <TextBlock Text="Nome:" Margin="0,0,0,5" />
          <ui:TextBox Name="txtNome" MaxLength="100" Margin="0,0,0,10" />

          <TextBlock Text="Estado:" Margin="0,0,0,5" />
          <ComboBox Name="cbEstado" DisplayMemberPath="Nome" SelectedValuePath="Id" Margin="0,0,0,20" />

          <ui:Button Name="btnNovo" Content="Novo" Click="BtnNovo_Click" Margin="0,0,0,5" Appearance="Primary" />
          <ui:Button Name="btnSalvar" Content="Salvar" Click="BtnSalvar_Click" Margin="0,0,0,5" />
          <ui:Button Name="btnEditar" Content="Editar" Click="BtnEditar_Click" Margin="0,0,0,5" />
          <ui:Button Name="btnExcluir" Content="Excluir" Click="BtnExcluir_Click" Margin="0,0,0,5" Appearance="Danger" />
          <ui:Button Name="btnCancelar" Content="Cancelar" Click="BtnCancelar_Click" Margin="0,0,0,5" Appearance="Secondary" />
          <ui:Button Name="btnFechar" Content="Fechar" Click="BtnFechar_Click" Margin="0,10,0,0" Appearance="Secondary" />
        </StackPanel>
      </ui:Card>
    </Grid>

    <ui:InfoBar Grid.Row="1" Name="infoBarStatus" IsClosable="False" />
  </Grid>
</ui:FluentWindow>
